<Window
    x:Class="DicomFilmPrinter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DICOM 胶片打印 - 示例"
    Width="950"
    Height="700"
    KeyDown="Window_KeyDown">
    <Window.Resources>
        <!--  淡入淡出动画效果  -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0.0"
                To="1.0"
                Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>

    <DockPanel>
        <StackPanel
            Margin="8"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Button
                x:Name="BtnOpenFiles"
                Width="110"
                Margin="4"
                Click="BtnOpenFiles_Click">
                打开文件
            </Button>
            <Button
                x:Name="BtnOpenFolder"
                Width="110"
                Margin="4"
                Click="BtnOpenFolder_Click">
                打开文件夹
            </Button>
            <Separator Width="20" Background="Transparent" />
            <Button
                x:Name="BtnToggleView"
                Width="120"
                Margin="4"
                Click="BtnToggleView_Click">
                切换到单张查看
            </Button>
            <Separator Width="20" Background="Transparent" />
            <Button
                x:Name="BtnPrintCurrentPage"
                Width="120"
                Margin="4"
                Click="BtnPrintCurrentPage_Click">
                打印当前页面
            </Button>
            <Button
                x:Name="BtnPrintCustomDoc"
                Width="120"
                Margin="4"
                Click="BtnPrintCustomDoc_Click">
                打印自定义文档
            </Button>
            <Separator Width="20" Background="Transparent" />
            <TextBlock
                x:Name="TxtStatus"
                Margin="8,0,0,0"
                VerticalAlignment="Center">
                未加载图像
            </TextBlock>
        </StackPanel>

        <!--  网格视图模式  -->
        <ScrollViewer
            x:Name="GridViewPanel"
            VerticalScrollBarVisibility="Auto"
            Visibility="Visible">
            <Border
                Margin="8"
                BorderBrush="Gray"
                BorderThickness="1">
                <ItemsControl x:Name="ImagesPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="8"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <StackPanel>
                                    <Image Source="{Binding}" Stretch="Uniform" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </ScrollViewer>

        <!--  单张连续查看模式  -->
        <Grid x:Name="SingleViewPanel" Visibility="Collapsed">
            <Border
                Margin="8"
                BorderBrush="Gray"
                BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  图像显示区域  -->
                    <Border
                        Grid.Row="0"
                        Background="Black"
                        MouseWheel="SingleView_MouseWheel">
                        <Image
                            x:Name="SingleImage"
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Stretch="Uniform" />
                    </Border>

                    <!--  控制面板  -->
                    <Grid
                        Grid.Row="1"
                        Margin="8"
                        Background="#F5F5F5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  上一张按钮  -->
                        <Button
                            x:Name="BtnPrevious"
                            Grid.Column="0"
                            Width="100"
                            Height="40"
                            Margin="4"
                            Click="BtnPrevious_Click"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="16" Text="◀ " />
                                <TextBlock VerticalAlignment="Center" Text="上一张" />
                            </StackPanel>
                        </Button>

                        <!--  图像信息和进度条  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="8,4"
                            VerticalAlignment="Center">
                            <TextBlock
                                x:Name="TxtImageInfo"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Text="1 / 1" />
                            <Slider
                                x:Name="ImageSlider"
                                Margin="0,8,0,0"
                                IsSnapToTickEnabled="True"
                                Maximum="1"
                                Minimum="1"
                                TickFrequency="1"
                                ValueChanged="ImageSlider_ValueChanged"
                                Value="1" />
                        </StackPanel>

                        <!--  下一张按钮  -->
                        <Button
                            x:Name="BtnNext"
                            Grid.Column="2"
                            Width="100"
                            Height="40"
                            Margin="4"
                            Click="BtnNext_Click"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="下一张" />
                                <TextBlock FontSize="16" Text=" ▶" />
                            </StackPanel>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
